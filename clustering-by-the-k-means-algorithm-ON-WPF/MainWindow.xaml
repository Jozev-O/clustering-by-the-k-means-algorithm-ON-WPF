<Window x:Class="clustering_by_the_k_means_algorithm_ON_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clustering_by_the_k_means_algorithm_ON_WPF" 
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:scott="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:viewmodels="clr-namespace:UI.ViewModels" 
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <helix:HelixViewport3D Visibility="{Binding Is3DMode, Converter={StaticResource BoolToVis}}" />
        <scott:WpfPlot Visibility="{Binding Is2DMode, Converter={StaticResource BoolToVis}}" />
        <Button Command="{Binding LoadAndClusterCommand}" Content="Загрузить и кластеризовать" VerticalAlignment="Bottom" HorizontalAlignment="Center" />

    </Grid>
</Window>
